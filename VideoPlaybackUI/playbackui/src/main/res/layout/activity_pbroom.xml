<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_pb_container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--播放器和白板-->
        <RelativeLayout
            android:id="@+id/rl_pb_container_big"
            android:layout_width="match_parent"
            android:layout_height="240dp">

        </RelativeLayout>

        <!--进度条-->
        <RelativeLayout
            android:id="@+id/rl_pb_container_progress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom">

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_pb_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/pb_ic_exit" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fl_pb_container_main">
        <!--聊天页-->
        <com.baijia.playbackui.viewsupport.AutoExitDrawerLayout
            android:id="@+id/dl_pb_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fl_pb_chat_content_container"
                android:layout_width="300dp"
                android:layout_gravity="start"
                android:layout_height="match_parent">

            </FrameLayout>

        </com.baijia.playbackui.viewsupport.AutoExitDrawerLayout>

        <!--下边的小的窗口-->
        <FrameLayout
            android:id="@+id/dfl_pb_container_freedom_big"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_gravity="right|top"
            android:background="#0d29dc">

            <com.baijiahulian.player.BJPlayerView
                android:id="@+id/pb_pv_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:aspect_ratio="fit_parent"
                app:bottom_controller="@layout/pb_player_view_null"
                app:top_controller="@layout/pb_player_view_null">


            </com.baijiahulian.player.BJPlayerView>

        </FrameLayout>

    </FrameLayout>

    <com.baijia.playbackui.viewsupport.PBDragFrameLayout
        android:id="@+id/dfl_pb_container_freedom_small"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="10dp"
        android:background="#0d29dc">

    </com.baijia.playbackui.viewsupport.PBDragFrameLayout>


</RelativeLayout>
